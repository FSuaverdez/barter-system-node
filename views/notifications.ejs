  <title>XChange | Notification</title>
</head>

<body>

  <header>
    <div class="container-fluid">
      <nav class="navbar">
        <form class="input-group col-md-auto" action="searchWithAcc.php" method="post">
          <input type="text" class="form-control" placeholder="Search" name="search_text">
          <div class="input-group-append">
            <button class="btn btn-light" type="submit" name="search">
              <i class="fa fa-search"></i>
            </button>
          </div>
        </form>
      </nav>
    </div>

    <div class="navigationbar">
      <nav class="navbar navbar-expand-md navbar-light">
        <div class="container-fluid">
          <button id="navbutton" type="button" class="navbar-toggler" data-toggle="collapse"
            data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="nav-bar ">
              <ul class="nav justify-content-center">
                <% if (user) { %>
                  <li class="nav-item">
                    <a class="nav-link active" href="/">Home</a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" href="/post">Posts</a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" href="/notifications">Notifications</a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" href="/profile">Welcome <%= user.email %> </a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" href="/logout">Log Out</a>
                  </li>
                  <% } else{ %>
                    <li class="nav-item">
                      <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/login">Login</a>
                    </li>

                    <li class="nav-item">
                      <a class="nav-link" href="/signup">Sign Up</a>
                    </li>
                    <% } %>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </div>

  </header>
  <!-Cards-->
    <div class="container-fluid">
      <div class="d-flex flex-column justify-content-center align-items-center  ">
        <% offers.forEach(o=> { %>
          <div class="card offer mb-4 w-50">
            <div class="card-header">
              <%= o.name %>
            </div>
            <div class="card-body">
              <h5 class="card-title">
                <%= o.description %>
              </h5>
              <a href="/offer/<%= o._id %> " class="btn btn-primary">View Offer</a>

            </div>
          </div>
          <% }) %>
      </div>


    </div>

    <footer class="page-footer font-small blue">
      <div class="footer-copyright text-center py-3">
